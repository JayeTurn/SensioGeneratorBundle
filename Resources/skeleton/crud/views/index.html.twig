<h1>List of {{ entity }} entities</h1>

<table class="records_list">
    <thead>
        <tr>
        {%- for field in fields %}

            <th>{{ field|capitalize }}</th>

        {%- endfor %}

            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {{ '{% for entity in entities %}' }}
        <tr>

    {%- for field in fields %}
        {%- if loop.first and ('show' in actions) %}

            <td><a href="{{ "{{ path('"~ route_prefix ~"_show', { 'id': entity.id }) }}" }}">{{ '{{ entity.'~ field ~' }}' }}</a></td>

        {%- else %}

            <td>{{ '{{ entity.'~ field ~' }}' }}</td>

        {%- endif %}

        {%- if loop.last %}

            <td>
                {%- include dir ~"/views/others/actions.html.twig" %}
            </td>

        {%- endif %}
    {%- endfor %}

        </tr>
    {{ '{% endfor %}' }}
    </tbody>
</table>

{% if 'new' in actions %}
<ul>
    <li>
        <a href="{{ "{{ path('"~ route_prefix ~"_new') }}" }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endif %}